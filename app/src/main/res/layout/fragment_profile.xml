<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModelProfile"
            type="com.linh.doan.views.uis.profile.ProfileViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:background="@color/black"
            android:id="@+id/ImageViewImageUser"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:background="@drawable/fragment"
            android:orientation="vertical"
            android:weightSum="6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/CircleImageViewUser"
                    android:layout_width="69dp"
                    android:layout_height="96dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="18dp"
                    android:foregroundGravity="center_vertical"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/TextViewNameUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="38dp"
                    android:layout_marginEnd="80dp"
                    android:layout_toEndOf="@+id/CircleImageViewUser"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TextViewEmailUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TextViewNameUser"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/CircleImageViewUser"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/ImageButtonEditProfile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="25dp"
                    android:background="@null"
                    android:scaleType="center"
                    android:src="@drawable/ic_edit" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8">

                <ImageView
                    android:id="@+id/ImageViewLanguage"
                    android:layout_width="24sp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_global" />

                <TextView
                    android:id="@+id/TextViewTitleLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@+id/ImageViewLanguage"
                    android:gravity="center_vertical"
                    android:text="@string/txt_language"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_toStartOf="@+id/imageButtonChangeLanguage"
                    android:text="@string/txt_language_vi"
                    android:id="@+id/TextViewLanguage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/imageButtonChangeLanguage"
                    android:scaleType="center"
                    android:background="@null"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12.4dp"
                    android:src="@drawable/ic_next" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8">

                <ImageView
                    android:id="@+id/ImageViewNotification"
                    android:layout_width="19dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_notification" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="23dp"
                    android:layout_toEndOf="@+id/ImageViewNotification"
                    android:gravity="center_vertical"
                    android:text="@string/txt_notification"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageButton
                    android:scaleType="center"
                    android:background="@null"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12.4dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_next" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8">

                <ImageView
                    android:id="@+id/ImageViewVersion"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_version" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@+id/ImageViewVersion"
                    android:gravity="center_vertical"
                    android:text="@string/txt_version"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:gravity="center"
                    android:text="@string/txt_hint_version"
                    android:textColor="@color/grey"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/grey3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/RelativeLayoutLogout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8">

                <ImageView
                    android:id="@+id/ImageViewLogout"
                    android:layout_width="24dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:foregroundGravity="center"
                    android:src="@drawable/ic_logout" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="18dp"
                    android:layout_toEndOf="@+id/ImageViewLogout"
                    android:text="@string/txt_logout"
                    android:textColor="#C92323"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>